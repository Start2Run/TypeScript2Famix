    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "sourceMaps": true,
            "stopOnEntry": false,
            "preLaunchTask": "tsc: build - tsconfig.json",
            "runtimeArgs": [
                "--nolazy"
            ],
            "skipFiles": [
                "${workspaceFolder}/resources/*.ts"
            ],
            "program": "${workspaceFolder}\\src\\sample.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}